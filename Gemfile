# A sample Gemfile
source "https://rubygems.org"

gem "sinatra", require: "sinatra/base"

group :development do
  gem 'heroku'
  gem 'foreman'
end

gem 'haml'
gem 'sass'
gem 'sprockets'
group :assets do  
  gem 'coffee-script'
  gem 'therubyracer'
  gem 'compass'
  gem 'bootstrap-sass'
end

gem 'rack-cache', require: "rack/cache"
gem 'thin'